# Database (for docker compose)
POSTGRES_USER=app
POSTGRES_PASSWORD=app
POSTGRES_DB=tmdb
POSTGRES_PORT=5432

# API
API_PORT=8000

# Keycloak (dev)
KEYCLOAK_PORT=8080
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# Keycloak (web)
VITE_KEYCLOAK_ISSUER_URL=http://localhost:8080/realms/taste-kid
VITE_KEYCLOAK_CLIENT_ID=taste-kid-web

# Keycloak (API verification)
# Important: Keycloak tokens use an issuer that matches the public URL.
# - The `issuer` claim will be `http://localhost:8080/realms/taste-kid` in this dev setup.
# - The API container must fetch JWKS from the internal docker hostname `keycloak`.
KEYCLOAK_ISSUER_URL=http://localhost:8080/realms/taste-kid
KEYCLOAK_JWKS_URL=http://keycloak:8080/realms/taste-kid/protocol/openid-connect/certs
KEYCLOAK_AUDIENCE=taste-kid-web

# Embeddings provider choice (you can start with "ollama" then switch to "bedrock")
EMBEDDINGS_PROVIDER=ollama

# Ollama
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=nomic-embed-text

# Bedrock (later)
AWS_REGION=eu-west-1
BEDROCK_EMBED_MODEL_ID=amazon.titan-embed-text-v2:0

# Vector dim (must match your embedding model output dimension)
EMBEDDING_DIM=1024

